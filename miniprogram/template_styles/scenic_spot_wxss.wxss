.page_header{
  height: 500rpx;
  border-bottom: 20rpx solid rgb(238, 238, 238);
}

.header_item{
  height: 500rpx;
}


.page_title{
  padding: 30rpx;
}

.title_text{
  font-size: 60rpx;
  font-weight: bold;
}

.switcher{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.normal_item{
  display: flex;
  justify-content: center;
  width: 250rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 5rpx solid rgb(238, 238, 238);
}

.chosen_item{
  display: flex;
  justify-content: center;
  width: 250rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 5rpx solid rgb(241, 104, 104);
}

.swicher_text{
  font-size: 40rpx;
  font-weight: 500;
  color: rgb(136, 136, 136);
}

.chosen_text{
  font-size: 40rpx;
  font-weight: 500;
}



/*简介部分*/
.breif_introduction{
  padding: 30rpx 30rpx 70rpx 30rpx;
}

.BIV_content{
  padding: 0rpx 0rpx 50rpx 0rpx;
}

.BI_content{
  font-size: 38rpx;
  font-weight: 400;
  color: rgb(136, 136, 136);
}



/*详细信息部分*/
.detailed_information{
  padding: 0rpx 30rpx 30rpx 30rpx;
  border-bottom: 20rpx solid rgb(238, 238, 238);
}

.DI_content{
  height: 80rpx;
  padding: 30rpx 0rpx 30rpx 0rpx;
  border-bottom: 3rpx solid rgb(238, 238, 238);
}

.DIV_icons{
  float: left;
  padding: 15rpx 17.5rpx 0rpx 17.5rpx;
}

.DI_icons{
  width: 55rpx;
  height: 55rpx;
}

.item_titlev{
  float: left;
  padding: 15rpx 0rpx 0rpx 10rpx;
}

.item_title{
  font-size: 40rpx;
}

.item_contentv{
  float: right;
  padding: 15rpx 15rpx 0rpx 0rpx;
}

.item_content{
  color: rgb(136, 136, 136);
}

.next_icons{
  width: 60rpx;
  height: 60rpx;
}

.RC_title{
  height: 80rpx;
  padding: 30rpx 0rpx 10rpx 0rpx;
}

.text_contentv{
  padding: 0rpx 15rpx 30rpx 15rpx;
  border-bottom: 4rpx solid rgb(238, 238, 238);
}

.text_content{
  color: rgb(136, 136, 136);
}



/*评论区部分*/
.message_board{
  padding: 30rpx;
}

.MBV_top{
  padding: 10rpx 15rpx 20rpx 15rpx;
  border-bottom: 5rpx solid rgb(238, 238, 238);
}

.list_item{
  border-bottom: 3rpx solid rgb(238, 238, 238);
}

.MBV_title{
  height: 130rpx;
}

.update_but{
  float: right;
}

.MBV_head{
  float: left;
  padding: 25rpx 0rpx 0rpx 20rpx;
}

.MB_head{
  width: 80rpx;
  height: 80rpx;
}

.MBV_NAD{
  padding: 20rpx 0rpx 0rpx 20rpx;
  float: left;
}

.MB_name{
  font-size: 35rpx;
  font-weight: 500;
}

.MB_date{
  font-size: 30rpx;
  color: rgb(136, 136, 136);
}

.MBV_content{
  padding: 0rpx 20rpx 30rpx 20rpx;
}

.MB_content{
  font-size: 36rpx;
  font-weight: 300;
}

.write_comment{
  padding: 50rpx 0rpx 50rpx 0rpx;
}

.no_comment{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 90rpx 0;
  border-bottom: 3rpx solid rgb(238, 238, 238);
}

.no_comment_tips{
  font-size: 35rpx;
  font-weight: 500;
  color: rgb(136, 136, 136);
}

.MBV_delete{
  padding: 30rpx 20rpx 0rpx 0rpx;
  float: right;
}